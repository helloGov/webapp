<div ng-controller="editProfileController">
    <div class="container">
        <div class="row text-center">

          <form>
              <div class="form-group">
                  <input type="text" class="form-control text-center" placeholder="Enter your username here" ng-model="profileDetails.name">
              </div>
              <div class="form-group">
                  <textarea type="text" class="form-control text-center" placeholder="Share some info about yourself." ng-model="profileDetails.bio"></textarea>
              </div>
              <div class="form-group">
                  <input type="file" class="form-control text-center" placeholder="Upload a photo." ng-model="profileDetails.image" onchange="angular.element(this).scope().file_changed(this)"  accept="image/*" />
              </div>
              <div class="form-group">
                  <button type="submit" ng-click="login()"><h3>Update my Profile</h3></button>
              </div>

          </form>

        </div>
    </div>
</div>
